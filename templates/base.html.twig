<header>
    <nav>
        <ul>
            <li><a href="{{ path('default') }}">Accueil</a></li>
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <li><a href="{{ path('new_game') }}">Jouer</a></li>
            {% endif %}
            <li><a href="{{ path('regles') }}">Règles</a></li>
        </ul>
        <img src="{{ asset('images/logo_hagakure.png') }}">
        <ul>
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <li><a href="{{ path('user_profil') }}">Mon profil</a></li>
                <li><a href="{{ path('app_logout') }}">Me déconnecter</a></li>
            {% else %}
                <li><a href="{{ path('app_register') }}" class="link_out">Inscription</a></li>
                <li><a href="{{ path('app_login') }}" class="link_out">Connexion</a></li>
            {% endif %}
        </ul>
    </nav>
</header>
<div class="container">
    {% block body %}{% endblock %}
</div>
<footer>
    <div>
        <nav>
            <ul>
                <li><a href="{{ path('default') }}" class="link_out">Accueil</a></li>
                <li><a href="{{ path('regles') }}" class="link_out">Règles</a></li>
                <li><a href="{{ path('app_register') }}" class="link_out">Inscription</a></li>
                <li><a href="{{ path('app_login') }}" class="link_out">Connexion</a></li>
