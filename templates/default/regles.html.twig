{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/regles.css') }}">
{% endblock %}
{% block body %}
    <section id="container_game">
        <img src="{{ asset('images/elements/tree.svg') }}" alt="sakura" class="sakura">
        <img src="{{ asset('images/elements/flower.svg') }}" alt="flower" class="flower f1">
        <img src="{{ asset('images/elements/flower.svg') }}" alt="flower" class="flower f2">
        <img src="{{ asset('images/elements/flower.svg') }}" alt="flower" class="flower f3">
        <img src="{{ asset('images/elements/flower.svg') }}" alt="flower" class="flower f4">

        <h1>Les règles de Hagakure en vidéo</h1>
        <div id="b_game">
            <div class="bg">
                <video width="100%" height="100%" controls>
                    <source src="{{ asset('video/Gameiyo.mp4') }}" type="video/mp4" />
                </video>
            </div>
        </div>

    </section>

    <section id="regles">
        <h2>Les règles </h2>

        <article>
            <img src="{{ asset('images/regles/carte1.png') }}" alt="carte des règles numéro 1">
            <img src="{{ asset('images/regles/carte2.png') }}" alt="carte des règles numéro 2">
            <img src="{{ asset('images/regles/carte3.png') }}" alt="carte des règles numéro 3">
            <img src="{{ asset('images/regles/carte4.png') }}" alt="carte des règles numéro 4">
            <img src="{{ asset('images/regles/carte5.png') }}" alt="carte des règles numéro 5">
            <img src="{{ asset('images/regles/carte6.png') }}" alt="carte des règles numéro 6">
        </article>
    </section>
{% endblock %}
