        </div>
        <div class="grp-2" style="display: flex">
            <div style="height: 140px; width: 100px; border: 1px solid black; margin-right: 20px;"></div>
            <div style="height: 140px; width: 100px; border: 1px solid black; "></div>
        </div>
    </div>
    <div>
        <button id="selectpremierdouble">Valider ce doublon</button>
    </div>
    <div class="validerenvoiechange">
        <button style="display: none;" id="validerdouble">Envoyer l'offre</button>
        <p>N'oubliez pas d'appuyer sur valider pour finir votre tour.</p>
    </div>
</div>

{% if adversaire.actions.OFFRE != false  %}
    {% if adversaire.actions.OFFRE.cartesInitiales != [] %}
        {% if adversaire.actions.OFFRE.cartesAdversaire == [] %}
            <div class="popup-offre">
                <div class="overlay">
                    <div class="contenu-pop-interne">
                        <h4>Choissisez une carte :</h4>
                        <div class="flexcarteselect">
                        {% for card in adversaire.actions.OFFRE.cartesInitiales %}
                            <div class="carteselectoffre">
                                <img src=" {{ asset('img_carte_jeu/'~cards[card].picture) }}" alt="Carte n°{{ cards[card].id }}">
                                <br>
                                <input type="radio" name="cartechoisieoffre" value="{{ card }}">
                            </div>
                        {% endfor %}
                        </div>
                        <br>
                        <button class="col-2" id="validoffre">Valider mon choix</button>
                    </div>
                </div>
            </div>
        {% endif %}
    {% endif %}
{% endif %}


{% if adversaire.actions.ECHANGE != false  %}
    {% if adversaire.actions.ECHANGE.cartesInitiales != [] %}
        {% if adversaire.actions.ECHANGE.cartesAdversaire == [] %}
            <div class="popup-echange">
                <h4>Choissisez un doublon</h4>
                <div class="groupe1" style="display: flex">
                    {% for card in adversaire.actions.ECHANGE.cartesInitiales.premierdouble %}
                            <div class="col-1">
                                <img src=" {{ asset('img_carte_jeu/'~cards[card].picture) }}" style="width: 60px;" alt="Carte n°{{ cards[card].id }}">
                            </div>
                    {% endfor %}
                    <input type="radio" name="carteschoisiesechange" value="groupe1">
                </div>
                <div class="groupe2" style="display: flex">
                    {% for card in adversaire.actions.ECHANGE.cartesInitiales.deuxiemedouble %}
                        <div class="col-1">
                            <img src=" {{ asset('img_carte_jeu/'~cards[card].picture) }}" style="width: 60px;" alt="Carte n°{{ cards[card].id }}">
