<div class="moimain">
    {% for card in moi.handCards %}
        <div class="cartespan">
        <img class="{{ cards[card].id }} macarte" src="{{ asset('img_carte_jeu/'~cards[card].picture) }}">
            <div class="invisibleinput">
                <input type="radio" name="carte_secret" value="{{ card }}"
                       class="choixSecret">
                <input type="checkbox" name="carte_depot" value="{{ card }}"
                       class="choixDepot">
                <input type="checkbox" name="carte_offre" value="{{ card }}"
                       class="choixOffre">
                <input type="checkbox" name="carte_echange" value="{{ card }}"
                    class="choixEchange">
            </div>
        </div>
    {% endfor %}
</div>

