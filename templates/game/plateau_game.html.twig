<div class="row">
    <div class="col-8">
        Cartes de l'adversaire
        {% for card in adversaire.handCards %}
             <img style="width: 50px; transform: rotate(180deg)" src="{{ asset('img_carte_jeu/dos.png') }}">
            {# <span style="border: 1px solid black; margin:3px; padding:5px">
                {{ cards[card].number }}
            </span> #}
        {% endfor %}
    </div>
    <div class="col-4">
        Actions
        {% if adversaire.actions.SECRET == false %}
            <img src="{{ asset('images/game/jetons/secret.png') }}" style="width: 50px;">
        {% else %}
            <button id="secret" >Secret off</button>
        {% endif %}
        {% if adversaire.actions.DEPOT == false %}
            <img src="{{ asset('images/game/jetons/depot.png') }}" style="width: 50px;">
        {% else %}
            <button >Dépot off</button>
        {% endif %}
        {% if adversaire.actions.OFFRE == false %}
            <img src="{{ asset('images/game/jetons/offre.png') }}" style="width: 50px;">
        {% else %}
            <button>Offre off</button>
        {% endif %}
        {% if adversaire.actions.ECHANGE == false %}
            <img src="{{ asset('images/game/jetons/echange.png') }}" style="width: 50px;">
        {% else %}
            <button>Echange off</button>
        {% endif %}
    </div>
</div>

<div class="row">
    Plateau adversaire
</div>

<div class="row">
    {% for i in 1..7 %}
        <div class="col-1">
                <span style="margin:3px; padding:5px">
                     <img style="width: 70px;" src="{{ asset('img_carte_centre/image'~ i ~'.png' ) }}">
                </span>
        </div>
    {% endfor %}
</div>

<div class="row">
    Mon Plateau
</div>

<div class="row">
    <div class="col-8">
        {% for card in moi.handCards %}
            <img style="width: 100px;margin:3px; padding:5px;" class="{{ cards[card].id }}" src="{{ asset('img_carte_jeu/'~cards[card].picture) }}">
            <span class="{{ cards[card].id }}" >
            {#  {{ cards[card].number }} #}
                    <input type="radio" name="carte_secret" value="{{ card }}"
                           style="display: none"
                           class="choixSecret">
                    <input type="checkbox" name="carte_depot" value="{{ card }}"
                           style="display: none"
                           class="choixDepot">
                    <input type="checkbox" name="carte_offre" value="{{ card }}"
                           style="display: none"
                           class="choixOffre">
                    <input type="checkbox" name="carte_echange" value="{{ card }}"
                        style="display: none"
                        class="choixEchange">
                </span>
        {% endfor %}
    </div>
    <div class="col-4 action">
        Mes Actions
        {% if moi.actions.SECRET == false %}
            <img src="{{ asset('images/game/jetons/secret.png') }}" style="cursor: pointer; width: 50px;" id="secret"  alt="Bouton secret">
        {% else %}
            <button id="secret" >Secret off</button>
        {% endif %}
        {% if moi.actions.DEPOT == false %}
            <img src="{{ asset('images/game/jetons/depot.png') }}" style="cursor: pointer; width: 50px;" id="depot"  alt="Bouton dépot">
        {% else %}
            <button >Dépot off</button>
        {% endif %}
        {% if moi.actions.OFFRE == false %}
            <img src="{{ asset('images/game/jetons/offre.png') }}" style="cursor: pointer; width: 50px;" id="offre"  alt="Bouton Offre">
        {% else %}
            <button>Offre off</button>
        {% endif %}
        {% if moi.actions.ECHANGE == false %}
            <img src="{{ asset('images/game/jetons/echange.png') }}" style="cursor: pointer; width: 50px;" id="echange"  alt="Bouton échange">
        {% else %}
            <button>Echange off</button>
        {% endif %}
        <button id="valider" style="display: none" >Valider action</button>
    </div>
</div>

<div class="echangePop" style="display: none">
    <h4>Choisissez un premier groupe de deux cartes :</h4>
    <div style="display: flex;">
        <div class="grp-1" style="display: flex; margin-right: 30px;">
            <div style="height: 140px; width: 100px; background-color: red; border: 1px solid black; margin-right: 20px;"></div>
            <div style="height: 140px; width: 100px; background-color: red; border: 1px solid black;"></div>
        </div>
        <div class="grp-2" style="display: flex">
            <div style="height: 140px; width: 100px; border: 1px solid black; margin-right: 20px;"></div>
            <div style="height: 140px; width: 100px; border: 1px solid black; "></div>
        </div>
    </div>
    <div>
        <button id="selectpremierdouble">Valider ce doublon</button>
    </div>
    <div class="validerenvoiechange">
        <button style="display: none;" id="validerdouble">Envoyer l'offre</button>
        <p>N'oubliez pas d'appuyer sur valider pour finir votre tour.</p>
    </div>
</div>

{% if adversaire.actions.OFFRE != false  %}
    {% if adversaire.actions.OFFRE.cartesInitiales != [] %}
        {% if adversaire.actions.OFFRE.cartesAdversaire == [] %}
            <div class="row">
                    <h4>Choissisez une carte</h4>
                    {% for card in adversaire.actions.OFFRE.cartesInitiales %}
                        <div class="col-1">
                            <img src=" {{ asset('img_carte_jeu/'~cards[card].picture) }}" style="width: 60px;" alt="Carte n°{{ cards[card].id }}">
                            <br>
                            <input type="radio" name="cartechoisieoffre" value="{{ card }}">
                        </div>
                    {% endfor %}
                    <br>
                    <button class="col-2" id="validoffre">Valider mon choix</button>
            </div>
        {% endif %}
    {% endif %}
{% endif %}


{% if adversaire.actions.ECHANGE != false  %}
    {% if adversaire.actions.ECHANGE.cartesInitiales != [] %}
        {% if adversaire.actions.ECHANGE.cartesAdversaire == [] %}
            <div class="row">
                <h4>Choissisez un doublon</h4>
                <div class="groupe1" style="display: flex">
                    {% for card in adversaire.actions.ECHANGE.cartesInitiales.premierdouble %}
                            <div class="col-1">
                                <img src=" {{ asset('img_carte_jeu/'~cards[card].picture) }}" style="width: 60px;" alt="Carte n°{{ cards[card].id }}">
                            </div>
                    {% endfor %}
                    <input type="radio" name="carteschoisiesechange" value="groupe1">
                </div>
                <div class="groupe2" style="display: flex">
                    {% for card in adversaire.actions.ECHANGE.cartesInitiales.deuxiemedouble %}
                        <div class="col-1">
                            <img src=" {{ asset('img_carte_jeu/'~cards[card].picture) }}" style="width: 60px;" alt="Carte n°{{ cards[card].id }}">
                        </div>
                    {% endfor %}
                    <input type="radio" name="carteschoisiesechange" value="groupe2">
                </div>
                <br>
                <button class="col-2" id="validechange">Valider mon choix</button>
            </div>
        {% endif %}
    {% endif %}
{% endif %}