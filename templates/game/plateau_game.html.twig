<div class="row">
    <div class="col-8">
        Cartes de l'adversaire
        {% for card in adversaire.handCards %}
            {# <img src="{{ asset('cartes/'~cards[card].picture) }}"> #}
            <span style="border: 1px solid black; margin:3px; padding:5px">
                {{ cards[card].number }}
            </span>
        {% endfor %}
    </div>
    <div class="col-4">
        Actions
    </div>
</div>
<div class="row">
    Plateau adversaire
</div>
<div class="row">
    {% for i in 1..7 %}
        <div class="col-1">
                <span style="border: 1px solid black; margin:3px; padding:5px">
                    EMPL{{ i }}
                </span>
        </div>
    {% endfor %}

</div>
<div class="row">
    Mon Plateau
</div>
<div class="row">
    <div class="col-8">
        {% for card in moi.handCards %}
            {# <img src="{{ asset('cartes/'~cards[card].picture) }}"> #}
            <span style="border: 1px solid black; margin:3px; padding:5px">
                {{ cards[card].number }}
                    <input type="radio" name="carte_secret" value="{{ card }}"
                           style="display: none"
                           class="choixSecret">
                    <input type="checkbox" name="carte_depot" value="{{ card }}"
                           style="display: none"
                           class="choixdepot">
                </span>
        {% endfor %}
    </div>
    <div class="col-4 action">
        Mes Actions
        <button id="secret" disabled>Secret</button>
        <button  id="depot" disabled>Depot</button>
        <button  id="offre" disabled>Offre</button>
        <button  id="echange" disabled>Echange</button><br>
        <button id="valider" style="display: none" disabled>Valider action</button>
    </div>
</div>
